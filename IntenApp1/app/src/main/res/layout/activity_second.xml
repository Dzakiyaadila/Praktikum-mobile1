<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".SecondActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second Activity"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat belum dilengkapi."
        android:textSize="18sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/txt_dream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isi cita-cita"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_to_third_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lengkapi Data Diri"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/btn_to_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsikan Gambar"
        />


</LinearLayout>